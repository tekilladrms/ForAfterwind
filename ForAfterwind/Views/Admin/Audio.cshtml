@model IEnumerable<ForAfterwind.Domain.Release>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_AdminLayout";
}

<h1>Edit releases</h1>
<hr />
<div class="row">
    @foreach (var el in Model)
    {
        <div class="col-md-3">
            <div class="content">
                <h3>@el.Name</h3>
                <a asp-action="EditRelease"
                   asp-controller="Admin"
                   asp-route-id="@el.Id">
                    <div class="release__cover">
                        <img src="@Url.Content(el.PathToCover)" />
                    </div>
                </a>

                <a asp-action="DeleteRelease"
                   asp-controller="Admin"
                   asp-route-id="@el.Id"> Delete </a>
            </div>
        </div>
    }

</div>
<hr />
<div>
    <a asp-action="CreateRelease"
            asp-controller="Admin"
            
            class="btn btn-primary">
        New Release
    </a>
</div>