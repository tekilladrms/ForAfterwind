@model ForAfterwind.Models.City
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{ 
    ViewData["Title"] = "Create city";

    Layout = "_AdminLayout"; 
 }



    <h1>Create city</h1>

    <div class="row">
        <div class="col-md-2">
            <form asp-controller="Admin" asp-action="CreateCity" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Координаты</label>
                    <input type="text" asp-for="Top" class="form-control" />
                    <input type="text" asp-for="Left" class="form-control" />

                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>


    </div>

@RenderSection("ValidationScripts", required:false)