@model ForAfterwind.Domain.PhotoAlbum
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "CreatePhotoAlbum";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create photo album</h1>

<h4>New album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePhotoAlbum"
              method="post"
              enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            @if (Model != null)
            {
                <div class="release__cover">
                    <img src="@Url.Content(Model.PathToCover)" alt="" id="output" />
                </div>
            }
            <label class="control-label">Выберите обложку</label>
            <input type="file" name="uploadedFile" accept="image/*" /><br>
            <hr />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <hr />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>