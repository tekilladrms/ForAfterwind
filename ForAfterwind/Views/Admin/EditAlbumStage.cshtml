@model ForAfterwind.Models.AlbumStage
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditAlbumStage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit AlbumStage</h1>

<form asp-controller="Admin"
      asp-action="EditAlbumStage"
      method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Stagename</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Progress" class="control-label">Progress</label>
                <input asp-for="Progress" class="form-control" />
                <span asp-validation-for="Progress" class="text-danger"></span>
            </div>
            

        </div>
        <div class="col-lg">
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" id="tiny" rows="5">
                </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>

</form>

