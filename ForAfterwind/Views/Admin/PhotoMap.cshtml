@model ForAfterwind.ViewModels.PhotoMapViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Photo map";
    Layout = "_AdminLayout";
}

    <h1>Photo map</h1>
    
    <div class="row">
        <div class="col-lg-2">
            <form asp-action="_Cities"
                  method="get"
                  data-ajax="true"
                  data-ajax-update="#ajaxcities"
                  id="cities">

                <div id="ajaxcities">

                </div>
            </form>
            <br />
        <form asp-controller="Admin"
              asp-action="CreateCity"
              id="addcity"
              method="post"
              data-ajax="true"
              data-ajax-mode="replace"
              data-ajax-update="#ajaxcities"
              data-ajax-complete="removeCitiesFormEvents()">
            
            <h3>Добавить город</h3>
            <div class="form-group">
                <label class="control-label">Название</label>
                <input type="text" name="name" class="form-control" />
                
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Координаты</label>
                <input id="top" type="number" name="top" class="form-control" />
                <input id="left" type="number" name="left" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

        </div>
        <div class="col">
            <div id="map" class="map">

            </div>
            <form asp-controller="Admin"
                  asp-action="_Markers"
                  method="get"
                  data-ajax="true"
                  data-ajax-update="#map"
                  id="markers">
            </form>
        </div>

        
    </div>
    
