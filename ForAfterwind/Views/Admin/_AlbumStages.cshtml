@model IEnumerable<ForAfterwind.Models.AlbumStage>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}


    <h2>Album stages</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Progress</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var el in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => el.Name)</td>
                    <td>@Html.DisplayFor(modelItem => el.Progress)</td>
                    
                    
                    <td>
                        <a asp-controller="Admin"
                           asp-action="DeleteAlbumStage"
                           asp-route-id="@el.Id"
                           data-ajax="true"
                           data-ajax-update="#ajaxalbumstages"
                           data-ajax-complete="removeAlbumStageFormEvents()">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>