
@model ForAfterwind.Domain.Post

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h1>Post</h1>

<div>
    <div>
        @* Конвертируем обложку(byte[]) в Base64 для отображения *@
        @{
            var base64 = Convert.ToBase64String(Model.Cover);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        }
        <img class="img-thumbnail post__preview-img background__darkest" src="@imgSrc" />
    </div>

    <div>
        <textarea asp-for="Description">
        </textarea>
    </div>
</div>
