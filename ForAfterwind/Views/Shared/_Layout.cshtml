@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Afterwind</title>

    <link rel="stylesheet" href="~/libs/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Site.css" />
    <link rel="stylesheet" href="~/libs/owlcarousel2/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/libs/owlcarousel2/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/libs/fancybox/jquery.fancybox.css" />
    @*<link rel="stylesheet" href="~/libs/animatecss/animate.min.css" />*@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

    <link rel="stylesheet" href="~/fonts/Main_font.ttf" />

    <!-- Put this script tag to the <head> of your page -->
    @*<script type="text/javascript" src="https://vk.com/js/api/openapi.js?168"></script>

        <script type="text/javascript">
            VK.init({ apiId: API_ID, onlyWidgets: true });
        </script>*@
</head>
<body>
    <div class="background__dark">
        <div class="container wrapper">
            <div class="">
                
                <nav class="navbar navbar-light light-blue lighten-4 row">

                    <!-- Navbar brand -->
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/img/Logo_word.png" /></a>

                    <!-- Collapse button -->
                    <button class="navbar-toggler ml-auto" type="button" onclick="toggleMenu()">
                        <img src="~/img/mobileMenuButton.png" alt="" />
                    </button>

                    <!-- Collapsible content -->
                    <div class="navbar-collapse hidden" id="mobileMenu">

                        <!-- Links -->
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="About" asp-action="Index">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Media" asp-action="Index">Media</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Blog" asp-action="Index">Blog</a>
                            </li>
                        </ul>
                        <!-- Links -->

                    </div>
                    <!-- Collapsible content -->

                    <div class="parent__menu">
                        <ul class="menu d-flex justify-content-center">
                            <li>
                                @Html.ActionLink("Home", "Index", "Home")
                            </li>

                            <li>
                                <a asp-controller="About" asp-action="Index">About Us</a>
                                <ul>
                                    <li>
                                        @Html.ActionLink("Band", "Band", "About")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Musicians", "Musicians", "About")
                                    </li>
                                </ul>
                            </li>

                            <li>

                                @Html.ActionLink("Media", "Index", "Media")
                                <ul>
                                    <li>
                                        @Html.ActionLink("Audio", "Audio", "Media")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Video", "Video", "Media")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Photo", "Photo", "Media")
                                    </li>
                                </ul>
                            </li>



                            <li>
                                @Html.ActionLink("Blog", "Index", "Blog")
                            </li>
                        </ul>
                    </div>
                </nav>
                <!--/.Navbar-->
                
                
            </div>

        </div>
    </div>


    <div class="container content">
        <div class="left">
            <ul>
                <li class="links__item">
                    <a href="https://vk.com/afterwindofficial" target="_blank">
                        <i class="fa fa-vk"></i>

                    </a>
                </li>
                <li class="links__item">
                    <a href="https://www.facebook.com/afterwindofficial" target="_blank">

                        <i class="fa fa-facebook-f"></i>
                    </a>
                </li>
                <li class="links__item">
                    <a href="https://www.instagram.com/afterwindband/" target="_blank">

                        <i class="fa fa-instagram"></i>
                    </a>
                </li>
                <li class="links__item">
                    <a href="https://www.last.fm/ru/music/Afterwind" target="_blank">

                        <i class="fa fa-lastfm"></i>
                    </a>
                </li>
                <li class="links__item">
                    <a href="https://soundcloud.com/afterwind" target="_blank">

                        <i class="fa fa-soundcloud"></i>
                    </a>
                </li>
                <li class="links__item">
                    <a href="https://www.youtube.com/c/Afterwind" target="_blank">

                        <i class="fa fa-youtube"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md">
                <div class="right">
                    @RenderBody()
                </div>
            </div>
        </div>

    </div>


    <script src="~/libs/jquery/jquery-3.4.1.min.js"></script>
    <script src="~/libs/jquery/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/libs/fancybox/jquery.fancybox.pack.js"></script>
    <script src="~/libs/owlcarousel2/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>